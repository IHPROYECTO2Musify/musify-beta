<!-- ad/show.ejs -->
<div class="container campaign-container">
  <div class="row">
    <a class="btn btn-primary" href="/users/activity">Volver a mi perfil</a>
    <div class="col-sm-2">

      <% if(user._id.equals(ad.creator_id._id)) { %>
        <a class="btn btn-primary" href="/ad/<%= ad._id %>/edit">Edita este anuncio</a>

        <a class="btn btn-primary" href="/ad/<%= ad._id %>/delete">Elimina este anuncio</a>

      <% } %>

      <!-- <img src="https://ksr-ugc.imgix.net/assets/007/188/910/68df9ec3603e3f3138bed402dea3cab2_original.jpg?w=80&h=80&fit=crop&v=1466566705&auto=format&q=92&s=eff05acf65569368cc99f6363722fe60"><br> -->
      By: <strong><%= ad.creator_id.username %></strong>
    </div>
    <div class="col-sm-10">
      <h1><%= ad.title %></h1>
      <p class="campaign-category">Tipo de anuncio: <%= ad.types %></p>
      <p class="campaign-description"> <%= ad.description %></p>
      <p class="campaign-category"> <%= ad.city %></p>
      <p class="campaign-description"> <%= ad.styles %></p>
      <p class="campaign-description">Audio: <%= ad.audio %></p>
      <p class="campaign-category">Video: <%= ad.video %></p>
      
    </div>
  </div>
</div>