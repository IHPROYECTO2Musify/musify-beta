<!-- views/auth/signup.ejs -->
<h2>Regístrate en Musify</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <p class="reel-in">
    El registro es gratuito y te permitirá escribir a otros usuarios para unirte a sus proyectos, crear tus propios<br> anuncios y más ventajas.
  </p>
  <label for="username">Alias</label>
  <input id="username" type="text" name="username">
  <br><br>
  <label for="password">Contraseña</label>
  <input id="password" type="password" name="password" >

  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>

  <button>Registrarme</button>
